<!DOCTYPE html>
<html>

<head>
  <title></title>
  <link rel='stylesheet' type='text/css' href='./stylesheets/style.css' />
  <script type='text/javascript' src='./javascripts/bootstrap.min.js'></script>
  <script type='text/javascript' src='./javascripts/jquery-3.5.1.min.js'></script>
</head>

<body>
  <h1>DAFTAR SISWA</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>nama</th>
        <th>umur</th>
        <th>status</th>
        <th>actions</th>
      </tr>
    </thead>
    <tbody>

    </tbody>
  </table>
  <br>
  </br>
  <div>
    <form action="/action_page.php">
      <label for="nama">Nama</label>
      <input type="text" id="nama" name="nama" placeholder="Ketik nama..">

      <label for="umur">Umur</label>
      <input type="number" id="umur" name="umur" placeholder="Ketik umur..">

      <label for="isboolean">Status</label>
      <select id="isboolean" name="isboolean">
        <option value="true">Menikah</option>
        <option value="false">Jomlo</option>
      </select>
      <br></br>
      <input type="submit" value="Submit">
    </form>
  </div>


  <script type='text/javascript'>
    const API_URL = ("http://localhost:3000/siswa", "http://m.localhost:3000/siswa")
    $(document).ready(function () {
      loadData();
    });
    const loadData = () => {
      $.ajax({
        method: "GET",
        url: API_URL,
        dataType: "json"
      })
        .done(function (data) {
          let html = '';
          data.forEach((item) => {
            html += `<tr>
              <td>${item.id}</td>
              <td>${item.nama}</td>
              <td>${item.umur}</td>
              <td>${item.isboolean}</td>
              <td><button>EDIT</button>  <button>DELETE</button></td>
              </tr>`
          })
          $('table tbody').html(html)
        });
    }
  </script>
</body>

</html>